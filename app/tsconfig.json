{
	"compilerOptions": {
		"jsx": "react",
		"lib": ["es5", "es6", "es7", "es2017", "dom"],
		"module": "commonjs",
		"target": "es6",
		"outDir": "../dist/app",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"noErrorTruncation": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
	},
	"include": ["./**/*"],
	"exclude": ["./**/*.spec.ts"]
}
