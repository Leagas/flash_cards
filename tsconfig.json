{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"importHelpers": true,
		"lib": ["es2017", "dom"],
		"esModuleInterop": true,
		"jsx": "react"
	},
	"include": ["api/**/*", "db/*", "./lib"],
	"exclude": ["src/**/*.spec.ts"]
}
